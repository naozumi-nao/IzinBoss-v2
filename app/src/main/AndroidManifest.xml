<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IzinBoss"
        tools:targetApi="33">
        <activity
            android:name=".view.leaverequest.RequestLeaveActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:parentActivityName=".view.MainActivity" />
        <activity
            android:name=".view.entry.RegisterActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:parentActivityName=".view.entry.LoginActivity" />
        <activity
            android:name=".view.entry.LoginActivity"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".view.entry.OnboardingActivity"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".view.entry.SplashActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MainActivity"
            android:screenOrientation="portrait"
            android:exported="true" />

    </application>

</manifest>